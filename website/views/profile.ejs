<!DOCTYPE html>
<html>
  <% include ui/header %>
  <body id="profile">
    <% include ui/top_menu %>
    <% include ui/ejs_utils %>
    <div class="profile-content-wrapper">
      <section class="profile-display-wrapper">
      	<div class="background-layer">
      		<div class="profile-avatar"><img id="profile-image" src="<%=gamer.profile_picture%>"></img></div>
      		<div class="profile-avatar-surround"></div>
      		<div class="profile-user-info">
              <!-- Review Count-->
      				<div class="profile-gamertag">
      					<table class="reps-flames-table">
      						<tr>
      							<td class="profile-review-count">

      							<p class="gamertag-profile-display"><%=gamer.rep_review_count %></p>
      							<p class="gamertag-profile-review-label"><%=__('positive-review')%></p>

      							</td>
      							<td class="profile-review-count">
      								<p class="gamertag-profile-display"><%=gamer.flame_review_count %></p>
      								<p class="gamertag-profile-review-label"><%=__('negative-review')%></p>
      							</td>
      						</tr>
      					</table>
      				</div>
              <!-- tag and region -->
      				<div class="profile-gamertag">
                <div id="gamertag-profile-wrapper">
      					<p class="gamertag-profile-display"><%= gamer.gamertag %><p>
      					<p class="gamertag-profile-region-display"><%=gamer.platform %></p>
              </div>
      				</div>
              <!-- tags -->
      				<div class="profile-tags">
      					<table id="tag-table"><tr>
      					<% for(var i = 0; i < 3 && i < gamer.top_tags.length; i++){%>
      						<td><div class="gamer-tag-div"><%=gamer.top_tags[i]%></div></td>
      					<% } %>
      					</tr>
      					</table>
      				</div>
      			</div>
      	</div>
      </section>
  	<div class="review-section">
  		<div class="review-player-header">
  			<span class="review-title"><%=__('reviews')%></span>
  		</div>
  	</div>
    
  	<div class="profile-comment-section">
      <div class="review-action-bar">
          <button class="review-player-button" uk-toggle="target: #review-modal"><%=__('review-player')%></button>
      </div>
  		<% if(gamer.reviews.length == 0){ %>
  			<% include ui/profile-components/no-reviews %>
  		<% } else {%>
  			<% for(var i = gamer.reviews.length - 1; i >= 0; i--){%>
      			<%- include('ui/profile-components/comment', { review: gamer.reviews[i]}) %>
      		<% } %>
      	<% } %>
  	</div>
    </div>
		<% include ui/login/signup_signin_modal %>
		<% include ui/profile-components/review-modal %>
  </body>
</html>
