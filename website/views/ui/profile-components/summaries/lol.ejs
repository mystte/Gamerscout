<div class="lol-summary-section">
  <div class="first-row">
    <div class="card small ranked"></div>
    <div class="card small ratings">
      <%- include('../ui/profile-components/cards/ratings', { approvals: gamer.rep_review_count, disapprovals: gamer.flame_review_count, total_reviews: gamer.review_count }) %>
    </div>
    <div class="card small attributes">
      <%- include('../ui/profile-components/cards/attributes', { attributes: gamer.top_tags }) %>
    </div>
  </div>
  <div class="second-row">
    <div class="left-col">
      <div class="card small positions">
        <div class="card-body">
          <h1 class="title">POSITIONS</h1>
          <div class="subtitle">Positions played most in the last 100 games</div>
          <%- include('../ui/profile-components/cards/horizontal_bar', {title: 'Top', width: gamer.stats.roles.top.percentage * 2.4}) %>
          <%- include('../ui/profile-components/cards/horizontal_bar', {title: 'Jungle', width: gamer.stats.roles.jungle.percentage * 2.4}) %>
          <%- include('../ui/profile-components/cards/horizontal_bar', {title: 'Mid', width: gamer.stats.roles.mid.percentage * 2.4}) %>
          <%- include('../ui/profile-components/cards/horizontal_bar', {title: 'Bottom', width: gamer.stats.roles.bottom.percentage * 2.4}) %>
          <%- include('../ui/profile-components/cards/horizontal_bar', {title: 'Support', width: gamer.stats.roles.support.percentage * 2.4}) %>
        </div>
      </div>
      <div class="card small champions">
        <%- include('../ui/profile-components/cards/frequent_champions', {frequent_champions: gamer.stats.frequent_champions}) %>
      </div>
    </div>
    <div class="reviews">
      <h1 class="title">REVIEWS</h1>
      <div class="actions">
        <% if (session && session._id) { %>
          <button uk-toggle="target: #review-modal" class="review-btn">REVIEW GAMER</button>
        <%} else {%>
          <button uk-toggle="target: #signup-signin-modal" class="review-btn">REVIEW GAMER</button>
        <%}%>
        <div class="filters">
          <span class="selected-filter">NEWEST FIRST</span>
          <div class="arrow-down"></div>
        </div>
      </div>
      <div class="reviews-list">
        <% if (gamer.reviews.length === 0) {%>
          <div class="no-review-container">
            <div class="l1">¯\_(ツ)_/¯</div>
            <div class="l2"><%=gamer.gamertag%> has not been reviewed yet</div>
            <div class="l3">Be the first to review this gamer or subscribe to this page to get updates about new reviews</div>
          </div>
        <% } else { %>
          <% for (var i = 0; i < gamer.reviews.length; i++) { %>
          <div class="review-container">
            <div class="header">
              <div class="reviewer-img"></div>
              <div class="infos">
                <div class="gamertag">
                  <%=gamer.reviews[i].username%>
                </div>
                <div class="reviewed-at">A DAY AGO</div>
              </div>
              <button class="more-alt"></button>
            </div>
            <div class="tags">
              <% if (gamer.reviews[i].review_type === 'REP') { %>
              <div class="thumbs up"></div>
              <div class="thumb-desc">Approval</div>
              <% } else { %>
              <div class="thumbs down"></div>
              <div class="thumb-desc">Disapproval</div>
              <% } %>
          
            </div>
            <div class="review-body">
              <%=gamer.reviews[i].comment%>
            </div>
          </div>
          <% } %>
        <% } %>
      </div>
    </div>
  </div>
</div>