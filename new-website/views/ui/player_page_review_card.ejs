<div>
	<div id="reviews-actions-div">
		<button id="review-player">Review Player</button>
		<div class="search">
      		<input type="text" class="searchTerm" placeholder="Filter">
      			<button type="submit" class="searchButton">O</button>
   		</div>
	</div>
	<div id="latest-reviews">
		<!-- insert logic here-->
		<div id="review-container">
		<table id="review-layout">
			<tr id="review-row">
				<td id="player-details">
					<div id="player-reviews-avatar"></div>
					<a>{{ gamertag }}</a>
					<br>
					<a>{{date}}</a>

				</td>
				<td id="player-reviews" style="text-align: left;">				
					<span id="tag-list">
						<button>{{ tag }}</button>
						<button>{{ tag }}</button>
