						<button>{{ tag }}</button>
					</span>
					<p>{{review}}</p>
				</td>


			</tr>
		</table>
	</div>
	</div>

	<div id="profile-review-form">
		<p>Review Player</p>
		<p>Review Type:*</p>
		<form onsubmit="validate()">
 		 	<input type="radio" name="review_type" value="approve" checked> Approval<br>
	  		<input type="radio" name="review_type" value="disapprove"> Disapproval<br> 
	  		<label>Review: </label> <input id="review-text-box" type="text" name="review_text"><br>

	  		<select data-placeholder="Begin typing a name to filter..." multiple class="chosen-select" name="test">
    <option value=""></option>
    <option>Efficient</option>
    <option>Helpful</option>
    <option>Knowledgeable</option>
    <option>Skilled</option>
    <option>Smart</option>
    <option>Team Player</option>
    <option>Inefficient</option>
    <option>Unhelpful</option>
    <option>Ignorant</option>
    <option>Unskilled</option>
    <option>Dumb</option>
    <option>Selfish</option>
    <option>Cheater</option>
    <option>Scammer</option>
    <option>Troll</option>

  </select>
			<br>
	  		<input type="submit">
			</form> 
	</div>
</div>

<script>
$(document).ready(function () {
	$(".chosen-select").chosen({
  		no_results_text: "Oops, nothing found!"
	});

	$("#profile-review-form").css("display", "none");

	$("#review-player").click(function(event) {
	  if($("#review-player").text() == "Review Player"){
	  	$("#review-player").text("back");
	  	$("#latest-reviews").hide();
	  	$(".search").hide();
	  	$("#profile-review-form").css("display", "block");
	  } else if($("#review-player").text() == "back"){
	  	$("#review-player").text("Review Player");
	  	$("#latest-reviews").show();
	  	$("#profile-review-form").hide();
	  	$(".search").show();
	  }
	});
});

</script>